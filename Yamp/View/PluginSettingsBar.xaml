<UserControl x:Class="Yemp.View.PluginSettingsBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Yemp.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel>
        <ToolBarTray HorizontalAlignment="Stretch">
            <ToolBar HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                <Button Command="{Binding SaveCommand}" Content="Save" />
                <Button Command="{Binding LoadCommand}" Content="Load" />
            </ToolBar>
        </ToolBarTray>
    </StackPanel>
</UserControl>
